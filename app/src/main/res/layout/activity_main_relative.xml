<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/Widgets"
              android:id="@+id/TextView1"
              android:textSize="30dp"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ButtonText"
            android:layout_below="@id/TextView1"

            android:id="@+id/Button1" android:layout_toStartOf="@+id/FlagButton" android:layout_marginEnd="1dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:src="@drawable/flag"
    android:layout_below="@id/TextView1"
    android:layout_alignParentEnd="true"
    android:id="@+id/FlagButton"/>

    <CheckBox android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_below="@id/FlagButton"
    android:text="@string/Checkit"
    android:id="@+id/CheckBox"/>
    <Switch android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="@string/Switch"
    android:layout_alignRight="@id/CheckBox"
    android:layout_below="@id/FlagButton"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_below="@id/CheckBox"
    android:hint="@string/Enter"/>

</RelativeLayout>